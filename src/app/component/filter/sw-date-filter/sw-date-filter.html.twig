{% block sw_date_filter %}
    <sw-range-filter
        class="sw-date-filter"
        :value="dateValue"
        :title="title"
        :active="active"
        :showResetButton="!!dateValue.from || !!dateValue.to"
        :isShowDivider="!isDateTimeType"
        @filter-update="updateFilter"
        @filter-reset="resetFilter">
        {% block sw_date_filter_from_field %}
            <template #from-field>
                <sw-datepicker
                    v-model="dateValue.from"
                    v-bind="$attrs"
                    class="sw-date-filter__from"
                    :dateType="dateType"
                    :placeholder="fromPlaceholder"
                    :label="$tc('global.default.from')">
                </sw-datepicker>
            </template>
        {% endblock %}

        {% block sw_date_filter_to_field %}
            <template #to-field>
                <sw-datepicker
                    v-model="dateValue.to"
                    v-bind="$attrs"
                    class="sw-date-filter__to"
                    :dateType="dateType"
                    :placeholder="toPlaceholder"
                    :label="$tc('global.default.to')">
                </sw-datepicker>
            </template>
        {% endblock %}
    </sw-range-filter>
{% endblock %}
