{% block sw_existence_filter %}
    <div class="sw-existence-filter">
        <sw-base-filter :title="title"
                        :showResetButton="!!value"
                        :active="active"
                        @filter-reset="resetFilter">
            {% block sw_existence_filter_content %}
                <sw-select-field :value="value"
                                 :placeholder="placeholder"
                                 @change="changeValue">
                    <option :value="true">{{ filter.optionHasCriteria }}</option>
                    <option :value="false">{{ filter.optionNoCriteria }}</option>
                </sw-select-field>
            {% endblock %}
        </sw-base-filter>
    </div>
{% endblock %}
