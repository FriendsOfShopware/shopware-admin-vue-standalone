{% block sw_number_filter %}
    <sw-range-filter
        class="sw-number-filter"
        :title="title"
        :active="active"
        :value="numberValue"
        :showResetButton="!!numberValue.from || !!numberValue.to"
        @filter-update="updateFilter"
        @filter-reset="resetFilter">
        {% block sw_number_filter_from_field %}
            <template #from-field>
                <sw-number-field
                    v-model="numberValue.from"
                    v-bind="$attrs"
                    class="sw-number-filter__from"
                    :label="$tc('global.default.from')"
                    :placeholder="fromPlaceholder">
                </sw-number-field>
            </template>
        {% endblock %}

        {% block sw_number_filter_to_field %}
            <template #to-field>
                <sw-number-field
                    v-model="numberValue.to"
                    v-bind="$attrs"
                    class="sw-number-filter__to"
                    :label="$tc('global.default.to')"
                    :placeholder="toPlaceholder">
                </sw-number-field>
            </template>
        {% endblock %}
    </sw-range-filter>
{% endblock %}
